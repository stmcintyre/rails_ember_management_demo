article#employee
  h1
    fullName

  form
    fieldset
      dl
        dt: label for=view.firstName.elementId First Name:
        dd: view Ember.TextField value=model.firstName viewName="firstName"

      dl
        dt: label for=view.lastName.elementId Last Name:
        dd: view Ember.TextField value=model.lastName viewName="lastName"

      dl
        dt: label for=view.email.elementId Email:
        dd: view Ember.TextField value=model.email viewName="email"

      dl
        dt: label for=view.phone.elementId Phone:
        dd: view Ember.TextField value=model.phone viewName="phone"

    fieldset.actions
      input type='submit' value='Save Changes' click="saveChanges"
      a.cancel href='#' click="cancel" cancel
